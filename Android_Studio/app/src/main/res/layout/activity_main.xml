<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:gravity="end"
            android:paddingTop="125dp"
            android:text=""
            android:textFontWeight="1"
            android:textColor="#000"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="#000"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/b1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="0dp"
                android:onClick="number1"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="1"
                android:textColor="#000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b1"
                android:onClick="number2"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="2"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b2"
                android:onClick="number3"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="3"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b1"
                android:layout_margin="0dp"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="0dp"
                android:onClick="number4"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="4"
                android:textColor="#000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b2"
                android:layout_toRightOf="@id/b4"
                android:layout_margin="0dp"
                android:onClick="number5"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="5"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b3"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b5"
                android:onClick="number6"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="6"
                android:textColor="#000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b4"
                android:onClick="number7"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="7"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b5"
                android:layout_toRightOf="@id/b7"
                android:onClick="number8"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="8"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b6"
                android:layout_toRightOf="@id/b8"
                android:onClick="number9"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="9"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/b0"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b7"
                android:onClick="number0"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="0"
                android:textSize="30dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/dot"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b8"
                android:layout_toRightOf="@id/b0"
                android:onClick="decimal"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="."
                android:textSize="30dp"
                android:textColor="#000" />
            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b3"
                android:onClick="add"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="+"
                android:textSize="30dp"
                android:textColor="#000" />
            <Button
                android:id="@+id/sub"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_below="@id/plus"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b6"
                android:onClick="minus"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="-"
                android:textColor="#000"
                android:textSize="30dp" />
            <Button
                android:id="@+id/mul"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_below="@id/sub"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/b9"
                android:onClick="multiply"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="*"
                android:textColor="#000"
                android:textSize="30dp" />
            <Button
                android:id="@+id/div"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_below="@id/mul"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/equals"
                android:onClick="divide"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="/"
                android:textColor="#000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/equals"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/b9"
                android:layout_toRightOf="@id/dot"
                android:onClick="res"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="="
                android:textSize="30dp"
                android:textColor="#000" />
            <Button
                android:id="@+id/del"
                android:layout_width="355dp"
                android:layout_height="85dp"
                android:layout_below="@id/equals"
                android:layout_margin="0dp"
                android:onClick="reset"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="Clear"
                android:textColor="#000"
                android:textSize="30dp" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
